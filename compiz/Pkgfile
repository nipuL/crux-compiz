# Description: Compositing window manager
# URL: http://compiz-fusion.org
# Maintainer: Lucas Hazel <lucas@die.net.au>
# Depends on:

name=compiz
version=0.6.2
release=1
source=(http://releases.compiz-fusion.org/0.6.0/$name/$name-$version.tar.gz)

build() {
	cd $name-$version
	./configure --prefix=/usr \
		--disable-gconf \
		--disable-gnome \
		--disable-metacity \
		--disable-kde \
		--disable-gnome-bindings
	make
	make DESTDIR=$PKG install
}
